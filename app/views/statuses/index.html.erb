<div class="page-header" style="margin-top: -10px; border-color: #4a9586"></div>


<div class="container" style="width: 470px; display: block; margin-right: 470px;">
<% @statuses.reverse_each do |status| %>
<div class="span6">
<div class="status">
  <div class="row">
    <div class="span1">
      <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user)  %>
    </div>
     
    <div class="span3">
      <strong><%=link_to status.user.profile_name, profile_path(status.user) %></strong>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
         | <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Delete Status?"} %>
        </span>
       </div> 
    </div>
  </div>  
</div>
</div>






<% end %>

