<% if @friend %>
	<h1><%= @friend.full_name %></h1>


	<p>Do you really want to friend <%= @friend.profile_name %>?</p>

	<%= form_for @user_friendship, method: :post do |form| %>
		<div class="form form-actions">
			<%= form.hidden_field :friend_id, value: @friend.profile_name %>
			<%= submit_tag "Yes, Add Friend", class: 'btn-stat' %>
			<%= link_to "Cancel", profile_path(@friend), class: 'btn btn-inverse' %>
		</div>	

	<% end %>
<% end %>	